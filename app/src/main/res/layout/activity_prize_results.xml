<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrizeResultsActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:gravity="center"
            android:id="@+id/textViewPrizeResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="64dp"
            android:fontFamily="casual"
            android:layout_gravity="center"
            android:text="@string/string_empty_string"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView

            android:id="@+id/imageViewPrize1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:src="@drawable/unknown_prize"
            android:contentDescription="@string/pick_a_prize" />
        <ImageView

            android:id="@+id/imageViewPrize2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:src="@drawable/unknown_prize"
            android:contentDescription="@string/pick_a_prize"/>
        <ImageView

            android:id="@+id/imageViewPrize3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:src="@drawable/unknown_prize"
            android:contentDescription="@string/pick_a_prize"/>
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView

            android:id="@+id/imageViewPrize4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:src="@drawable/unknown_prize"
            android:contentDescription="@string/pick_a_prize"/>
        <ImageView

            android:id="@+id/imageViewPrize5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:src="@drawable/unknown_prize"
            android:contentDescription="@string/pick_a_prize" />
        <ImageView

            android:id="@+id/imageViewPrize6"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:src="@drawable/unknown_prize"
            android:contentDescription="@string/pick_a_prize" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/imageViewPrize7"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:src="@drawable/unknown_prize"
            android:contentDescription="@string/pick_a_prize"/>
        <ImageView
            android:id="@+id/imageViewPrize8"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:src="@drawable/unknown_prize"
            android:contentDescription="@string/pick_a_prize" />
        <ImageView
            android:id="@+id/imageViewPrize9"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:src="@drawable/unknown_prize"
            android:contentDescription="@string/pick_a_prize"/>
    </LinearLayout>


    <Button
        android:id="@+id/btnTakePrizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="64dp"
        android:paddingVertical="8dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginVertical="32dp"
        android:text="@string/take_prizes"
        android:fontFamily="casual"
        android:textSize="40sp"
        android:backgroundTint="@color/pale_gold"/>

    <Button
        android:id="@+id/btnTakeTrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="64dp"
        android:paddingVertical="8dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginVertical="16dp"
        android:text="@string/take_trade"
        android:fontFamily="casual"
        android:textSize="40sp"
        android:backgroundTint="@android:color/holo_purple"/>

</LinearLayout>